pipeline {
    agent any
    environment {
      CI = 'true' 
    }
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:12.16.1-alpine3.9'
                    args '-p 3000:3000'
                }
            }
            steps {
                sh 'cd backend && npm install'
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'node:12.16.1-alpine3.9'
                    args '-p 3000:3000'
                }
            }
            steps {
                sh 'cd backend && npm test'
            }
        }
    }
    post {
        success {
            withAWS(credentials: 'aws-credentials', region: 'us-east-2') {
                sh """aws sns publish \
                --message 'Home search dashboard tests succeeded!' \
                --phone-number +1-808-349-1117 \
                --region us-east-1
                """
            }
        }
        failure {
            withAWS(credentials: 'aws-credentials', region: 'us-east-2') {
                sh """aws sns publish \
                --message 'Home search dashboard tests failed!' \
                --phone-number +1-808-349-1117 \
                --region us-east-1
                """
            }
        }
        always { 
            cleanWs()
        }
    }
}